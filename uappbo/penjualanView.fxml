<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #434242;" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="uap_pbo.PenjualanViewController">
   <children>
      <VBox layoutX="35.0" layoutY="24.0" spacing="30.0">
         <children>
            <HBox alignment="CENTER">
               <children>
                  <Label alignment="CENTER" text="Data Penjualan" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="24.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <TableView fx:id="tbData" prefHeight="446.0" prefWidth="730.0">
              <columns>
                <TableColumn fx:id="tbNama" prefWidth="213.0" text="Nama" />
                <TableColumn fx:id="tbJumlah" prefWidth="159.0" text="Jumlah Produk" />
                  <TableColumn fx:id="tbStok" prefWidth="138.0" text="Stok" />
                  <TableColumn fx:id="tbHarga" prefWidth="219.0" text="Harga" />
              </columns>
            </TableView>
            <HBox alignment="CENTER_RIGHT" spacing="50.0">
               <children>
                  <Button fx:id="btnKembali" mnemonicParsing="false" onAction="#kembali" style="-fx-background-color: #22A39F;" text="kembali" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                  </Button>
                  <Button fx:id="btnEdit" mnemonicParsing="false" onAction="#editTable" style="-fx-background-color: #22A39F;" text="Edit" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
